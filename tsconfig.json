{
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "target": "esnext",
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": false
  },
  "include": [
    "src/**/*",
    "./src/package/typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "assets"
  ]
}